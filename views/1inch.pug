extends layout

block content
    .block-header
        .row.clearfix
            .col-md-6.col-sm-12
                h1 1inch
                nav(aria-label='breadcrumb')
                    ol.breadcrumb
                        li.breadcrumb-item
                            a(href='/')
                                i.fa.fa-cube
                        li.breadcrumb-item.active(aria-current='page') Dashboard

        .row.clearfix
            .col-12.col-lg-12.col-md-12
                .card
                    .header
                        h2 Most swaps (Based on last 1000 requests)
                    .table-responsive
                        table.table.table-custom.spacing5.mb-0
                            thead
                                tr
                                    th Symbol
                                    th Count
                                    th Total count
                                    th Total volume

                            tbody
                            for most in data.most_swaps_1000
                                tr
                                    td #{most.symbol}
                                    td #{most.count_for_1000}
                                    td #{most.total_count}
                                    td #{most.total_volume}
        .row.clearfix
            .col-12.col-lg-12.col-md-12
                .card
                    .header
                        h2 Last 20 swaps
                    .table-responsive
                        table.table.table-custom.spacing5.mb-0
                            thead
                                tr
                                    th Account
                                    th to token
                                    th from token
                                    th to amount
                                    th from amount
                            tbody
                            for last in data.last_swaps_20
                                tr
                                    td #{last.account}
                                    td #{last.toToken}
                                    td #{last.fromToken}
                                    td #{last.toAmount}
                                    td #{last.fromAmount}
